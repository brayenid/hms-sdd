<style>
  /* Media query untuk tampilan cetak */
  @media print {
    body {
      background-color: #fff; /* Warna latar belakang untuk tampilan cetak */
      color: #000; /* Warna teks untuk tampilan cetak */
      font-size: 12px; /* Ukuran font untuk tampilan cetak */
    }

    /* Contoh: Menyembunyikan elemen tertentu pada tampilan cetak */
    .no-print {
      display: none;
    }
    @page {
      margin-top: 0;
      margin-bottom: 0;
    }
    .print-control {
      display: none;
    }
    .print-area {
      display: none;
    }
  }
</style>
<div class="max-w-5xl mx-auto p-4">
  <div class="mt-6 flex justify-end gap-x-3 no-print">
    <a
      class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 cursor-pointer"
      onClick="window.print()">
      <svg
        class="flex-shrink-0 w-4 h-4"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <polyline points="6 9 6 2 18 2 18 9" />
        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2" />
        <rect width="12" height="8" x="6" y="14" />
      </svg>
      Print
    </a>
    <a
      href="/checkout"
      class="flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-white bg-orange-700 border border-gray-200 rounded-lg md:w-auto focus:outline-none hover:bg-orange-800 hover:text-white focus:ring-4 focus:ring-orange-200 dark:focus:ring-orange-900 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
      Kembali
    </a>
  </div>
  <h2 class="subhead text-center">Daftar Tamu Aktif</h2>
  <p class="text-center text-xs"><%= new Date() %></p>
  <table class="min-w-full text-gray-700 dark:text-white text-xs mt-5">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b dark:border-gray-600">Tamu</th>
        <th class="py-2 px-4 border-b dark:border-gray-600">Nomor Kamar</th>
        <th class="py-2 px-4 border-b dark:border-gray-600">Check In</th>
        <th class="py-2 px-4 border-b dark:border-gray-600">Check Out</th>
        <th class="py-2 px-4 border-b dark:border-gray-600">Ekstra Orang</th>
        <th class="py-2 px-4 border-b dark:border-gray-600">Sarapan</th>
      </tr>
    </thead>
    <tbody>
      <% if (response.length) { %> <% response.forEach(res => { %>
      <tr>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center"><%= res.name %></td>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center">Room # <%= res.roomNumber %></td>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center">
          <%= res.startDate.split('-').reverse().join('-') %>
        </td>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center">
          <%= res.endDate.split('-').reverse().join('-') %>
        </td>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center"><%= res.extraPerson %></td>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center"><%= res.extraBreakfast ? 'Ya' : 'Tidak' %></td>
      </tr>
      <% }) %> <% } else { %>
      <tr>
        <td class="py-2 px-4 border-b dark:border-gray-600 text-center" colspan="6">Tidak ada data</td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<script></script>
