<div class="max-w-screen-xl mx-auto pb-4 w-full">
  <div class="relative bg-white dark:bg-gray-800 sm:rounded-lg">
    <div class="flex flex-col items-center justify-between space-y-3 p-4 md:flex-row md:space-y-0 md:space-x-4">
      <div class="w-full md:w-1/2">
        <form class="flex justify-end gap-3">
          <div class="flex-[1] flex items-center gap-3 max-w-60">
            <label for="limit" class="custom_label flex-[1]">Limit</label>
            <input
              type="number"
              id="limit"
              name="limit"
              class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
              placeholder="Masukan nilai limit data yang tampil"
              value="<%= query.limit || 50 %>" />
          </div>
          <div class="flex justify-center items-center gap-3">
            <button
              class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
              type="button"
              onClick="deleteLogs()">
              Hapus Logs
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
